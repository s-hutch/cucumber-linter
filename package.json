{
  "name": "gherkin-linter",
  "version": "0.0.1",
  "description": "A JavaScript Gherkin linter",
  "scripts": {
    "lint": "eslint .",
    "test": "npm run lint && mocha --reporter spec",
    "test-coverage": "node_modules/istanbul/lib/cli.js cover node_modules/mocha/bin/_mocha -- -R spec test/*",
    "gherkin-linter": "node ./src/main.js"
  },
  "main": "src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/s-hutch/gherkin-linter/"
  },
  "keywords": [
    "gherkin",
    "linter"
  ],
  "dependencies": {
    "gherkin": "4.0.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "coveralls": "^2.11.15",
    "eslint": "^3.14.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "yargs": "^6.6.0"
  },
  "bin": {
    "gherkin-linter": "src/main.js"
  },
  "author": "Sophie Hutchinson",
  "license": "MIT"
}
